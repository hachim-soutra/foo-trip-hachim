{% extends 'base.html.twig' %}

{% block title %}Destination{% endblock %}

{% block body %}
    <h1>Destination</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ destination.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ destination.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ destination.description }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ destination.duration }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ destination.image }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_destination_index') }}">back to list</a>
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}


    <a href="{{ path('app_destination_edit', {'id': destination.id}) }}">edit</a>

    {{ include('admin/destination/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
